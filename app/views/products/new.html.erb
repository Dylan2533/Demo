<h1 class="text-center my-4">New Product</h1>

<%= form_with model: @product, local: true, class: "needs-validation", novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter product name", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter product description", rows: 5, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :inventory_count, class: "form-label" %>
    <%= form.number_field :inventory_count, class: "form-control", placeholder: "Enter inventory count", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :featured_image, class: "form-label" %>
    <%= form.file_field :featured_image, class: "form-control", accept: "image/*", required: true %>
  </div>

  <div class="d-grid">
    <%= form.submit "Create Product", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
