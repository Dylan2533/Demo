<h1 class="text-center my-4"><%= t "Products" %></h1>

<div class="d-flex justify-content-end mb-3">
  <% if authenticated? %>
    <%= link_to "New product", new_product_path, class: "btn btn-primary me-2" %>
  <% else %>
    <%= link_to "Login", new_session_path, class: "btn btn-outline-secondary" %>
  <% end %>
</div>

<div id="products" class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to product.name, product, class: "text-decoration-none" %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
