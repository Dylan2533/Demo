<h1 class="text-center my-4">Forgot your password?</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: passwords_path, class: "needs-validation", novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.email_field :email_address, 
      class: "form-control", 
      required: true, 
      autofocus: true, 
      autocomplete: "username", 
      placeholder: "Enter your email address", 
      value: params[:email_address] %>
  </div>

  <div class="d-grid">
    <%= form.submit "Email reset instructions", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
